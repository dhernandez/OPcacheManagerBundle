{
    "type": "symfony-bundle",
    "name": "saturio/opcache-manager",
    "license": "MIT",
    "description": "Reset cache, show summary information and get configuration about de OPcache",
    "keywords": [
        "opcache",
        "manager",
        "cli",
        "ci",
        "cd",
        "php",
        "symfony",
        "bundle"
    ],
    "authors": [
        {
            "name": "Daniel Hernández Marín",
            "email": "dani@satur.io",
            "homepage": "https://danielhernandezmarin.com"
        }
    ],
    "require": {
        "php": ">=7.4",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "ext-json": "*",
        "ext-zend-opcache": "*",
        "symfony/browser-kit": ">=4.4",
        "symfony/console": ">=4.4",
        "symfony/dotenv": ">=4.4",
        "symfony/flex": "^1.3.1",
        "symfony/framework-bundle": ">=4.4",
        "symfony/http-client": ">=4.4",
        "symfony/yaml": ">=4.4"
    },
    "require-dev": {
        "symfony/debug-bundle": ">=4.4",
        "symfony/phpunit-bridge": ">=4.4"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "Saturio\\OpcacheManagerBundle\\": "src/"
        }
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": ">=4.4"
        }
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        }
    }
}
